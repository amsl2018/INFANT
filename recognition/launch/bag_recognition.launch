		<remap from="/cloud" to="/ground2/renamed_frame"/>
		<remap from="/cloud/transformed" to="/ground2/renamed_frame/transformed"/>
		<param name="target" type="string" value="localmap"/>
	</node>
	<node pkg="infant_recognition" type="pc_transformer" name="pc_transformer_rmground2">
		<remap from="/cloud" to="/rm_ground2/renamed_frame"/>
		<remap from="/cloud/transformed" to="/rm_ground2/renamed_frame/transformed"/>
		<param name="target" type="string" value="localmap"/>
	</node>

